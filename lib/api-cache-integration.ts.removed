// lib/api-cache-integration.ts\n\n// Global API cache clearing functions\nlet apiCacheClearers: (() => void)[] = []\n\nexport function registerCacheClearer(clearer: () => void) {\n  apiCacheClearers.push(clearer)\n}\n\nexport function clearAllApiCaches() {\n  apiCacheClearers.forEach(clearer => {\n    try {\n      clearer()\n    } catch (error) {\n      console.warn('Error clearing API cache:', error)\n    }\n  })\n}\n\nexport function unregisterCacheClearer(clearer: () => void) {\n  const index = apiCacheClearers.indexOf(clearer)\n  if (index > -1) {\n    apiCacheClearers.splice(index, 1)\n  }\n}\n